<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:id="@+id/notes_priority"
            android:layout_margin="10dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="10dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:id="@+id/tv_notes_title"
               android:layout_height="wrap_content"
               android:text="NotesMVVMAr"
               android:maxLines="1"
               android:fontFamily="@font/product_sans_bold"
               android:textSize="18sp"
               android:textColor="@color/white"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:id="@+id/tv_notes_subtitle"
               android:text="lfjskafjksfjkajfsklfknvnjkanvjakhohrwjnhdsjkahfjoqiuituqirodsnvha"
               android:fontFamily="@font/product_sans_bold"
               android:textSize="16sp"
               android:textColor="#C9C8C8"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="23/04/2023"
               android:id="@+id/tv_notes_date"
               android:fontFamily="@font/product_sans_bold"
               android:textSize="16sp"
               android:textColor="@color/white"/>
       </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>